<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhanes.drivemode.MainActivity">

    //MAPs
    <RelativeLayout
        android:id="@id/relmaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/maps"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/maps" />

    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/relmaps"
            android:layout_alignRight="@+id/relmaps"
            android:layout_below="@+id/relmaps"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:text="Maps"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textView7" />
        AKHIR MAPS//

    //PEOPLE
    <RelativeLayout
        android:id="@+id/relpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/people"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/people"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relpeople"
        android:layout_alignStart="@+id/relpeople"
        android:layout_below="@+id/relpeople"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:text="People"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView9" />

    AKHIR PEOPLE//

    //CALL
    <RelativeLayout
        android:id="@id/relcall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/call"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/call" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/relcall"
        android:text="Call"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView10" />
    AKHIR CALL//

    //VOICE
    <RelativeLayout
        android:id="@+id/relvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView9"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/voice"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/voice" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/relvoice"
        android:text="Voice"
        android:textColor="@color/colorPrimaryDark" />
    AKHIR VOICE//

    //MUSIC
    <RelativeLayout
        android:id="@id/relmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/music"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/music" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/relmusic"
        android:text="Music"
        android:textColor="@color/colorPrimaryDark" />
    AKHIR MUSIC//

    //HOME
    <RelativeLayout
        android:id="@+id/relhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/relmusic"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/home" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/relhome"
        android:text="Home"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>