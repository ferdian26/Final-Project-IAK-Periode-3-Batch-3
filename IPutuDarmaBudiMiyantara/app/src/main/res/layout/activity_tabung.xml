<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stikombali.alathitung.Tabung"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tabung"
                android:textAlignment="center"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="291dp"
                android:layout_height="148dp"
                android:src="@drawable/tabung"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/etJariJariTabung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan jari-jari tutup tabung, A a"
                android:inputType="numberDecimal"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="atau"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/etDiameterTabung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Masukan diameter tutup tabung/ A B"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/etTinggiTabung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Masukan tinggi tabung/ t"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btnLuasTabung"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="Luas permukaan"/>
                <Button
                    android:id="@+id/btnVolumeTabung"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="volume tabung"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvHasilTabung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil"
                android:textSize="30sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
