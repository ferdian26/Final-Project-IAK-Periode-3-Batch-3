<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="stikombali.alathitung.Samakaki">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luas Segitiga Sama Kaki"
                android:textAlignment="center"
                android:textSize="30sp"/>
            <ImageView
                android:layout_width="276dp"
                android:layout_height="170dp"
                android:src="@drawable/samakaki"
                android:layout_weight="0.18"
                android:layout_gravity="center"/>
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/etAlas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Alas/ CB"
                android:textAlignment="center"/>
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/etTinggi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Tinggi / A a"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btnHasilluas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawab"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keliling Segitiga Sama Kaki"
                android:textAlignment="center"
                android:textSize="30sp"/>
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/etSisiAlas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Sisi Alas / C B"
                android:textAlignment="center"/>
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/etSisimiring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Sisi miring / A B"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/btnHasilKeliling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawab"/>
            <TextView
                android:id="@+id/tvHasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jika Alas, Tinggi dan Sisi Miring Tidak Diketahui"
                android:textAlignment="center"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btnMA"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="mencari alas"/>
                <EditText
                    android:id="@+id/etMAtinggi"
                    android:inputType="numberDecimal"
                    android:layout_width="135dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="input p A a"/>
                <EditText
                    android:id="@+id/etMAsisimiring"
                    android:inputType="numberDecimal"
                    android:layout_width="135dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="input p AB/ AC"/>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnSM"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="mencari s miring"/>
                <EditText
                    android:id="@+id/etSMtinggi"
                    android:inputType="numberDecimal"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:hint="input p Aa"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/etSMalas"
                    android:inputType="numberDecimal"
                    android:layout_width="135dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="input p CB"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <Button
                    android:id="@+id/btnMT"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="mencari tinggi" />

                <EditText
                    android:id="@+id/etMTalas"
                    android:inputType="numberDecimal"
                    android:layout_width="135dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="input p CB"/>
                <EditText
                    android:id="@+id/etMTMiring"
                    android:inputType="numberDecimal"
                    android:layout_width="135dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="input p AB/AC"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
