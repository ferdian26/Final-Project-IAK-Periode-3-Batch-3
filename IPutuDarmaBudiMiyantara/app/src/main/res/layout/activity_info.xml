    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create by:"
        android:textAlignment="center"
        android:textSize="10sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I Putu Darma Budi Miyantara"
        android:textSize="25sp"
        android:textAlignment="center"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alat Hitung ini berguna untuk membantu untuk mengajari anaknya atau juga bisa digunakan untuk membantu mengerjakan tugas sekolah. Alat hitung ini memiliki berbagai macam fitur seperti :"
