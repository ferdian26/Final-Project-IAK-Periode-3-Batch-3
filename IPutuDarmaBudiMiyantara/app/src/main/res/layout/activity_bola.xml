<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stikombali.alathitung.Bola"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bola"
                android:textAlignment="center"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="291dp"
                android:layout_height="148dp"
                android:layout_gravity="center"
                android:src="@drawable/bola"/>
            <EditText
                android:id="@+id/etjarijaribola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Masukan Jari-Jari"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="atau masukan"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/etdiameterbola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Masukan Diameter"
                android:textAlignment="center" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btnluaspermukaanbola"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="luas permukaan"/>
                <Button
                    android:id="@+id/btnVolumeBola"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:text="volume bola"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvhasilbola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil"
                android:textSize="30sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
