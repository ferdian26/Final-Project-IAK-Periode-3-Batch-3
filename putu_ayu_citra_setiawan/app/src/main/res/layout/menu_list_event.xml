<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="1sp"
    android:background="@drawable/header_menu_button"
    >

    <ImageView
        android:id="@+id/gambar_event"
        android:layout_width="200sp"
        android:layout_height="150sp"
        android:src="@drawable/splashscreen"
        android:scaleType="fitXY"
        android:layout_marginTop="1sp"
        android:layout_marginLeft="1sp"
        android:layout_marginRight="1sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#e3e8e8"
        android:layout_margin="1sp"
        >

        <TextView
            android:id="@+id/txt_namaevent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nama event"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            />

        <TextView
            android:id="@+id/txt_namadaerah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nama daerah"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_namaevent"
            />

        <TextView
            android:visibility="invisible"
            android:id="@+id/id_culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="aa"
            android:textColor="@color/colorPrimaryDark"
            />

    </RelativeLayout>



</LinearLayout>